<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.senac</groupId>
  <artifactId>financeapp</artifactId>
  <version>1.0.0</version>
  <build>
    <finalName>${project.artifactId}-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>${maven.compiler.release}</release>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.senac.financeapp.MainApplication</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.senac.financeapp.Launcher</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.6.0</version>
        <configuration>
          <name>FinanceApp</name>
          <mainClass>com.senac.financeapp.Launcher</mainClass>
          <mainJar>${project.build.finalName}.jar</mainJar>
          <type>EXE</type>
          <destination>target/jpackage</destination>
          <vendor>SanTecWeb</vendor>
          <appVersion>${project.version}</appVersion>
          <copyright>Copyright 2026 SanTecWeb</copyright>
          <description>Aplicativo para gerenciamento de finan√ßas pessoais.</description>
          <winMenu>true</winMenu>
          <winShortcut>true</winShortcut>
          <winUpgradeUuid>f1e3a5d2-8a2b-48b9-9d5e-01a2b3c4d5e6</winUpgradeUuid>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.release>21</maven.compiler.release>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <javafx.version>21.0.1</javafx.version>
  </properties>
</project>
